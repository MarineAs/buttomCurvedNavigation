<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BottomNavigationView">
        <item name="itemBackground">@android:color/white</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemIconPadding">6dp</item>
        <item name="itemTextAppearanceActive">@style/textAppearance</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="textAllCaps">false</item>
        <item name="thumbTextPadding">10dp</item>
<!--        <item name="android:fontFamily">@font/roboto_regular</item>-->
    </style>
    <style name="textAppearance">
        <item name="android:textSize">10sp</item>
    </style>
</resources>
